{% use 'tarteaucitron.html.twig' %}
{% block javascript %}

	<script src="{{ app.request.basepath }}/js/libs/modernizr-2.5.3-respond-1.1.0.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="{{ app.request.basepath }}/assets/js/page/page.navbar-fixed-shrinked.js"></script>
	<!-- ZTheme -->
	<script src="{{ app.request.basepath }}/assets/js/bootstrap.min.js"></script>
	<!-- Dropdown hover -->
	<script src="{{ app.request.basepath }}/assets/js/bootstrap-hover-dropdown.min.js"></script>
	<!-- Owl Carousel -->
	<script src="{{ app.request.basepath }}/assets/js/owl.carousel.js"></script>
	<script src="{{ app.request.basepath }}/assets/js/jquery.mixitup.js"></script>
	<script src="{{ app.request.basepath }}/assets/js/jquery.magnific-popup.js"></script>
	<script src="{{ app.request.basepath }}/assets/js/jquery.waypoints.js"></script>
	<script src="{{ app.request.basepath }}/assets/js/jquery.countTo.js"></script>
	<script src="{{ app.request.basepath }}/assets/js/jquery.bxslider.js"></script>
	<script src="{{ app.request.basepath }}/assets/js/page/theme.js"></script>
	<!-- Datepicker -->
	<script src="{{ app.request.basepath }}/assets/js/datepicker/bootstrap-datepicker.min.js"></script>
	<script src="{{ app.request.basepath }}/assets/js/datepicker/bootstrap-datepicker.{{ app.locale }}.min.js"></script>
	<script type="text/javascript">

	jQuery(function($){
		var windowWidth = $(window).width();

		$(window).resize(function() {
		    if(windowWidth != $(window).width()){
		    location.reload();
		    return;
		    }
		});
		});
	</script>
	{% block tarteaucitron %}{{ parent() }}{% endblock tarteaucitron %}
	<!-- Menu Toggle Script -->
{% endblock javascript %}